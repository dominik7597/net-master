@model MvcGame.Models.PublisherCountryViewModel

@{
    ViewData["Title"] = "Publishers";
}

<h1>Publishers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Publishers" asp-action="Index" method="get">
    <p>

        <select asp-for="PublisherCountry" asp-items="Model.Countries">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publishers[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Publishers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
